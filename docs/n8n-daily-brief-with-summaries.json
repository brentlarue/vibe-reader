        "url": "={{ $('Set Config').item.json.apiUrl }}/api/items/{{ $json.id }}/summary",
        "sendBody": true,
        "contentType": "json",
        "bodyParameters": {
          "parameters": [
            {
              "name": "summary",
              "value": "={{ $json.generatedSummary }}"
