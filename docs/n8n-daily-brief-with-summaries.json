      "position": [900, 300]
    },
    {
      "parameters": {
        "jsCode": "// Filter items that don't have summaries\nconst items = $input.all();\nconst filtered = items.filter(item => {\n  const summary = item.json.aiSummary;\n  return !summary || summary.trim() === '';\n});\nreturn filtered;"
      },
      "id": "filter-no-summary",
      "name": "Filter Items Without Summaries",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1120, 300]
    },
    {
      "parameters": {
        "batchSize": 1,
        "options": {
          "reset": true
        }
      },
      "id": "split-batches",
      "name": "Process Items One by One",
      "type": "n8n-nodes-base.splitInBatches",
      "typeVersion": 3,
      "position": [1340, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "https://api.openai.com/v1/chat/completions",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpBearerAuth",
        "sendBody": true,
        "contentType": "json",
        "bodyParameters": {
          "parameters": [
            {
              "name": "model",
              "value": "gpt-4o-mini"
            },
            {
              "name": "messages",
              "value": "=[{\"role\":\"system\",\"content\":\"You are a helpful assistant that creates concise, informative summaries of articles for a daily news brief.\"},{\"role\":\"user\",\"content\":\"Summarize this article in 2-3 sentences for a daily news brief. Focus on key insights and actionable information.\\n\\nTitle: {{ $json.title }}\\nSource: {{ $json.source }}\\nContent: {{ $json.contentSnippet || $json.fullContent || 'No content available' }}\"}]"
            },
            {
              "name": "temperature",
              "value": "0.7"
            },
            {
              "name": "max_tokens",
              "value": "150"
            }
          ]
        },
        "options": {}
      },
      "id": "generate-summary",
      "name": "Generate Summary",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1560, 300],
      "credentials": {
        "httpBearerAuth": {
          "id": "openai-bearer-auth",
          "name": "OpenAI API Key"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "// Extract summary from OpenAI response\nconst openaiResponse = $input.item.json;\nconst summary = openaiResponse.choices?.[0]?.message?.content?.trim();\n\nif (!summary) {\n  throw new Error('No summary in OpenAI response: ' + JSON.stringify(openaiResponse).substring(0, 200));\n}\n\n// Get the original item from the \"Preserve Original Item\" node\n// Since Generate Summary (HTTP Request) replaces the input, we need to get it from the previous node\nlet originalItem;\ntry {\n  originalItem = $('Preserve Original Item').item.json;\n} catch (e) {\n  throw new Error('Cannot access original item from \"Preserve Original Item\" node: ' + e.message);\n}\n\nif (!originalItem || !originalItem.id) {\n  throw new Error('Original item missing required fields (id). Item: ' + JSON.stringify(originalItem));\n}\n\n// Return original item with the generated summary\nreturn {\n  ...originalItem,\n  generatedSummary: summary\n};"
      },
      "id": "extract-summary",
      "name": "Extract Summary",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1780, 300]
    },
